<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    tools:context=".fragment.BuffDetailFragment"
    android:background="@drawable/bg_buff_detail"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_4">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_source_icon"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            app:shapeAppearanceOverlay="@style/circleImageStyle"
            android:src="@drawable/icon_buff_default"
            app:strokeColor="@color/gray_black"
            android:background="@color/bg_transparent_black"
            android:padding="@dimen/dp_2"
            app:strokeWidth="@dimen/dp_2"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">
            <TextView
                android:id="@+id/text_buff_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刻晴-玉衡之贵"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/gray_black"/>

            <TextView
                android:id="@+id/text_buff_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:paddingHorizontal="@dimen/dp_5"
                android:text="暴击率"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:background="@color/field_crit"/>
            <TextView
                android:id="@+id/text_buff_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="@dimen/dp_2"
                android:paddingHorizontal="@dimen/dp_5"
                android:text="15.0%"
                android:textColor="@color/field_crit"
                android:textSize="@dimen/sp_24"/>
        </FrameLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/text_buff_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@color/bg_transparent_black"
        android:padding="@dimen/dp_5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:text="施放天街巡游时，刻晴的暴击率提升15%。施放天街巡游时，刻晴的暴击率提升15%。施放天街巡游时，刻晴的暴击率提升15%。施放天街巡游时，刻晴的暴击率提升15%。施放天街巡游时，刻晴的暴击率提升15%。"/>

</LinearLayout>