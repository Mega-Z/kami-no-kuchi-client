<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragment.VirtualProfileConfigFragment"
    android:background="@drawable/bg_dialog_gray"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/dp_4"
        android:paddingHorizontal="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="@dimen/dp_5"
            android:text="@string/text_title_virtual_config"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                app:cardCornerRadius="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_gravity="left|center_vertical">
                <ImageView
                    android:id="@+id/img_character_avatar"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:background="@color/element_avatar_bg_anemo"
                    android:src="@drawable/avatar" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/text_character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginStart="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/text_default_character_name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"/>
            <TextView
                android:id="@+id/text_character_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginStart="@dimen/dp_100"
                android:layout_marginBottom="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_1"
                android:paddingHorizontal="@dimen/dp_4"
                android:text="@string/text_default_character_cons"
                android:textColor="@color/black"
                android:background="@color/cons_0"
                android:textSize="@dimen/sp_12"/>

        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dp_2">
            <TextView
                android:id="@+id/text_hint_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:text="命之座："
                android:textStyle="bold"/>
            <SeekBar
                android:id="@+id/seekbar_cons"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:max="6"
                android:maxHeight="@dimen/dp_4"
                android:paddingStart="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_7"
                android:progress="0"
                android:progressDrawable="@drawable/bar"
                android:thumb="@drawable/thumb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dp_2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="等级："
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_character_level_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="Lv."/>
                <EditText
                    android:id="@+id/edtx_character_level"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:background="@color/bg_transparent_black"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:inputType="number"
                    android:maxLength="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="horizontal">

                <com.megaz.knk.view.CheckBoxView
                    android:id="@+id/checkbox_character_promote"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"/>
                <TextView
                    android:id="@+id/text_character_promote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/text_promote_true"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dp_2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="普通攻击："
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_talent_a_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/text_default_talent_level"/>
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekbar_talent_a"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:max="10"
                android:maxHeight="@dimen/dp_4"
                android:min="1"
                android:paddingStart="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_7"
                android:progress="10"
                android:progressDrawable="@drawable/bar"
                android:thumb="@drawable/thumb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dp_2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="元素战技："
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_talent_e_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/text_default_talent_level"/>
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekbar_talent_e"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:max="10"
                android:maxHeight="@dimen/dp_4"
                android:min="1"
                android:paddingStart="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_7"
                android:progress="10"
                android:progressDrawable="@drawable/bar"
                android:thumb="@drawable/thumb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dp_2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="元素爆发："
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_talent_q_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/text_default_talent_level"/>
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekbar_talent_q"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:max="10"
                android:maxHeight="@dimen/dp_4"
                android:min="1"
                android:paddingStart="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_7"
                android:progress="10"
                android:progressDrawable="@drawable/bar"
                android:thumb="@drawable/thumb" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@drawable/bg_div_gr_black"
            android:layout_marginVertical="@dimen/dp_5"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                app:cardCornerRadius="@dimen/dp_5"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="@dimen/dp_20">
                <ImageView
                    android:id="@+id/img_weapon"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/bg_star_1"
                    android:src="@drawable/sword" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/text_weapon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:layout_marginStart="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/text_default_weapon_name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"/>
            <TextView
                android:id="@+id/text_weapon_refine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginStart="@dimen/dp_80"
                android:layout_marginBottom="@dimen/dp_12"
                android:paddingVertical="@dimen/dp_1"
                android:paddingHorizontal="@dimen/dp_4"
                android:text="@string/text_default_refine"
                android:textColor="@color/affix_yellow"
                android:textStyle="bold"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:id="@+id/text_weapon_not_match"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:paddingHorizontal="@dimen/dp_10"
                android:rotation="45"
                android:text="@string/text_weapon_not_match"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/red"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"/>

        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dp_2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:text="精炼等阶："
                android:textStyle="bold"/>

            <SeekBar
                android:id="@+id/seekbar_refine"
                android:layout_width="@dimen/dp_140"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:max="5"
                android:min="1"
                android:maxHeight="@dimen/dp_4"
                android:paddingStart="@dimen/dp_7"
                android:paddingEnd="@dimen/dp_7"
                android:progress="0"
                android:progressDrawable="@drawable/bar"
                android:thumb="@drawable/thumb" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/dp_2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="等级："
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_weapon_level_prefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="Lv."/>
                <EditText
                    android:id="@+id/edtx_weapon_level"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:background="@color/bg_transparent_black"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:inputType="number"
                    android:maxLength="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:orientation="horizontal">

                <com.megaz.knk.view.CheckBoxView
                    android:id="@+id/checkbox_weapon_promote"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"/>
                <TextView
                    android:id="@+id/text_weapon_promote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_16"
                    android:text="@string/text_promote_true"
                    android:textStyle="bold"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_10"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:background="@drawable/bg_btn_blue"
            android:text="确认"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:background="@drawable/bg_btn_gray"
            android:text="取消"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/gray_black"/>
    </LinearLayout>

</LinearLayout>