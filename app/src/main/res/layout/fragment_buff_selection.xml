<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.EnabledBuffFragment"
    android:background="@drawable/bg_enabled_buff"
    android:layout_marginVertical="@dimen/dp_2"
    android:paddingStart="@dimen/dp_10"
    android:orientation="horizontal">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_source_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginVertical="@dimen/dp_4"
        android:layout_gravity="center_vertical"
        app:shapeAppearanceOverlay="@style/circleImageStyle"
        android:src="@drawable/icon_buff_default"
        app:strokeColor="@color/white"
        android:background="@color/bg_transparent_white"
        android:padding="@dimen/dp_2"
        app:strokeWidth="@dimen/dp_2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10">
        <TextView
            android:id="@+id/text_buff_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="刻晴-玉衡之贵"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/text_buff_effect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:paddingHorizontal="@dimen/dp_5"
            android:text="暴击率"
            android:textStyle="bold"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:background="@color/field_crit"/>
    </LinearLayout>

</LinearLayout>