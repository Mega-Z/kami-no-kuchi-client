<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.TalentFragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/img_talent_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/talent_anemo"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/img_talent_icon"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:src="@drawable/talent_q"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>
    </FrameLayout>
    <TextView
        android:id="@+id/text_talent_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_default_talent_level"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/dp_2"
        android:background="@drawable/bg_talent_lv"/>

</LinearLayout>