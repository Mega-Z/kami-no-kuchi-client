<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ArtifactEvaluationFragment">

    <LinearLayout
        android:id="@+id/layout_criterion_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_5"
        android:background="@drawable/bg_rd_rect_5"
        android:visibility="gone">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_2">
            <LinearLayout
                android:id="@+id/layout_artifact_overview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="@dimen/dp_4"
                android:background="@drawable/bg_artifact_overview">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal|bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="圣遗物评级"
                            android:textSize="@dimen/sp_8"
                            android:textColor="@color/gray"/>
                        <TextView
                            android:id="@+id/text_artifacts_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\???"
                            android:textColor="@color/rank_a_d"
                            android:textSize="@dimen/sp_18"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal|bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="圣遗物总分"
                            android:textSize="@dimen/sp_8"
                            android:textColor="@color/gray"/>
                        <TextView
                            android:id="@+id/text_artifacts_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="\???"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_18"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/text_criterion_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/sp_8"
                    android:textColor="@color/white"
                    android:text="评分规则：未知"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="5"
                    android:rowCount="2"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_hp"/>
                        <TextView
                            android:id="@+id/text_weight_hp"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_atk"/>
                        <TextView
                            android:id="@+id/text_weight_atk"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_column="2"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_def"/>
                        <TextView
                            android:id="@+id/text_weight_def"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_column="3"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_em"/>
                        <TextView
                            android:id="@+id/text_weight_mastery"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_column="4"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_er"/>
                        <TextView
                            android:id="@+id/text_weight_recharge"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>


                    <FrameLayout
                        android:layout_column="0"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_cr"/>
                        <TextView
                            android:id="@+id/text_weight_crit_rate"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_cd"/>
                        <TextView
                            android:id="@+id/text_weight_crit_dmg"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_column="2"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_phy"/>
                        <TextView
                            android:id="@+id/text_weight_phy"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_column="3"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:id="@+id/img_criterion_element"
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_anemo"/>
                        <TextView
                            android:id="@+id/text_weight_dmg"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_column="4"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:paddingVertical="@dimen/dp_3">
                        <ImageView
                            android:layout_gravity="center_horizontal|top"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            android:src="@drawable/ic_heal"/>
                        <TextView
                            android:id="@+id/text_weight_heal"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="top"
                            android:textSize="@dimen/sp_8"
                            android:text="@string/text_default_weight"/>
                    </FrameLayout>


                </GridLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_artifact_flower"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_2">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_artifact_plume"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_2">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_artifact_sands"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_2">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_artifact_goblet"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_2">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_artifact_circlet"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_2">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>