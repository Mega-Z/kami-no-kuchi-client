<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    tools:context=".fragment.BuffEnableFragment"
    android:background="@drawable/bg_buff_detail"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_4">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_source_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginVertical="@dimen/dp_4"
            android:layout_gravity="center_vertical"
            app:shapeAppearanceOverlay="@style/circleImageStyle"
            android:src="@drawable/icon_buff_default"
            app:strokeColor="@color/gray_black"
            android:background="@color/bg_transparent_black"
            android:padding="@dimen/dp_2"
            app:strokeWidth="@dimen/dp_2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:id="@+id/text_buff_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="刻晴-玉衡之贵"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_buff_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_5"
                android:text="暴击率"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:background="@color/field_crit"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/text_buff_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@color/bg_transparent_black"
        android:padding="@dimen/dp_5"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:text="施放天街巡游时，刻晴的暴击率提升15%。施放天街巡游时，刻晴的暴击率提升15%。施放天街巡游时，刻晴的暴击率提升15%。施放天街巡游时，刻晴的暴击率提升15%。施放天街巡游时，刻晴的暴击率提升15%。"/>
    <LinearLayout
        android:id="@+id/layout_buff_param"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_10"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_enable"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:background="@drawable/bg_btn_blue"
            android:text="启用"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:background="@drawable/bg_btn_gray"
            android:text="取消"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/gray_black"/>
    </LinearLayout>

</LinearLayout>